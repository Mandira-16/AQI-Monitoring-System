@model List<AQI_Monitoring_System.Models.Sensor>
@{
    ViewData["Title"] = "Monitoring Admin Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Monitoring Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/MADStyleSheet.css" />
</head>
<body>
    <div class="container dashboard-container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <!-- Admin Info Section -->
                <div class="card dashboard-card">
                    <div class="card-header">
                        <h4 class="text-center">Monitoring Admin Dashboard</h4>
                    </div>
                    <div class="card-body">
                        <div class="admin-info-section">
                            <h5>Welcome, @(User.Identity?.Name ?? "Admin")! You are logged in as an Admin.</h5>
                            <div class="admin-actions">
                                <div class="d-grid btn-action">
                                    <a asp-controller="Home" asp-action="Register" class="btn btn-primary">Register New User</a>
                                </div>
                                <div class="d-grid btn-action">
                                    <a asp-controller="Home" asp-action="ManageUsers" class="btn btn-info">Manage Users</a>
                                </div>
                                <div class="d-grid btn-action">
                                    <a asp-controller="Home" asp-action="ConfigureAlerts" class="btn btn-warning">Configure Alerts</a>
                                </div>
                                <div class="d-grid btn-action">
                                    <form asp-controller="Home" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-secondary">Logout</button>
                                    </form>
                                </div>
                            </div>

                            <!-- Success/Error Messages -->
                            <div class="notification-section">
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                                }
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sensor Registration Section -->
                <div class="card dashboard-card">
                    <div class="sensor-registration-section">
                        <h5 class="section-heading">Register New Sensor</h5>
                        <form asp-controller="Home" asp-action="AddSensor" method="post">
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <label for="SensorId" class="form-label">Sensor ID</label>
                                    <input type="text" class="form-control" id="SensorId" name="SensorId" required />
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="Location" class="form-label">Location</label>
                                    <input type="text" class="form-control" id="Location" name="Location" required />
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label for="Latitude" class="form-label">Latitude</label>
                                    <input type="number" step="any" class="form-control" id="Latitude" name="Latitude" required />
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label for="Longitude" class="form-label">Longitude</label>
                                    <input type="number" step="any" class="form-control" id="Longitude" name="Longitude" required />
                                </div>
                                <div class="col-md-2 mb-3 d-flex align-items-end">
                                    <button type="submit" class="btn btn-success w-100">Add Sensor</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- System Overview Section -->
                <div class="card dashboard-card">
                    <div class="system-overview-section">
                        <h5 class="section-heading">System Overview</h5>
                        <div class="system-stats">
                            <p>Active Sensors: @ViewBag.ActiveSensorsCount</p>
                            <p>Simulation Status: @ViewBag.SimulationStatus</p>
                            <p>Simulation Config: Frequency: @ViewBag.SimulationConfig.FrequencyMinutes min, Baseline AQI: @ViewBag.SimulationConfig.BaselineAqi, Variation: ±@ViewBag.SimulationConfig.VariationRange</p>
                        </div>
                        <div class="simulation-control">
                            <div class="d-grid btn-action">
                                @if (ViewBag.SimulationStatus == "Stopped")
                                {
                                    <form asp-controller="Home" asp-action="StartSimulation" method="post">
                                        <button type="submit" class="btn btn-success">Start Simulation</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="Home" asp-action="StopSimulation" method="post">
                                        <button type="submit" class="btn btn-danger">Stop Simulation</button>
                                    </form>
                                }
                            </div>
                            <div class="d-grid btn-action">
                                <a asp-controller="Home" asp-action="ConfigureSimulation" class="btn btn-primary">Configure Simulation</a>
                            </div>
                            <div class="d-grid btn-action">
                                <form asp-controller="Home" asp-action="PurgeOldReadings" method="post" onsubmit="return confirm('Are you sure you want to purge readings older than 1 month?');">
                                    <button type="submit" class="btn btn-danger">Purge Old Readings</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Active Sensors Readings Section -->
                <div class="card dashboard-card">
                    <div class="sensor-readings-section">
                        <h6 class="section-heading">Active Sensors Readings</h6>
                        <div class="readings-table">
                            @if (ViewBag.RecentReadings != null && ViewBag.RecentReadings.Count > 0)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Sensor ID</th>
                                            <th>Location</th>
                                            <th>AQI</th>
                                            <th>Recorded At</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var reading in ViewBag.RecentReadings)
                                        {
                                            if (reading.Sensor?.IsActive == true)
                                            {
                                                <tr>
                                                    <td>@(reading.Sensor?.SensorId ?? "Unknown")</td>
                                                    <td>@(reading.Sensor?.Location ?? "Unknown")</td>
                                                    <td class="@GetAqiClass(reading.Aqi)">@reading.Aqi</td>
                                                    <td>@reading.RecordedAt.AddHours(5.5).ToString("MMM dd, yyyy h:mm tt")</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>No recent readings from active sensors available.</p>
                            }
                        </div>
                    </div>
                </div>
                <!-- Current Alerts Section (New) -->
                <div class="card dashboard-card">
                    <div class="alerts-section">
                        <h5 class="section-heading">Current Alerts</h5>
                        @if (ViewBag.Alerts != null && ((List<string>)ViewBag.Alerts).Any())
                        {
                            <ul class="list-group">
                                @foreach (var alert in (List<string>)ViewBag.Alerts)
                                {
                                    <li class="list-group-item list-group-item-warning">@alert</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No alerts at this time.</p>
                        }
                    </div>
                </div>

                <!-- All Sensors Section -->
                <div class="card dashboard-card">
                    <div class="all-sensors-section">
                        <h6 class="section-heading">All Registered Sensors</h6>
                        <div class="sensors-table">
                            @if (Model != null && Model.Any())
                            {
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Sensor ID</th>
                                            <th>Location</th>
                                            <th>Latitude</th>
                                            <th>Longitude</th>
                                            <th>Is Active</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var sensor in Model)
                                        {
                                            <tr>
                                                <td>@sensor.SensorId</td>
                                                <td>@sensor.Location</td>
                                                <td>@sensor.Latitude</td>
                                                <td>@sensor.Longitude</td>
                                                <td>@(sensor.IsActive ? "Yes" : "No")</td>
                                                <td>
                                                    <div class="sensor-actions">
                                                        <a asp-controller="Home" asp-action="EditSensor" asp-route-id="@sensor.SensorId" class="btn btn-sm btn-primary me-1">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <form asp-action="ToggleSensorStatus" asp-route-id="@sensor.SensorId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to @(sensor.IsActive ? "deactivate" : "activate") this sensor?');">
                                                            <button type="submit" class="btn btn-sm @(sensor.IsActive ? "btn-success" : "btn-warning")">
                                                                <i class="bi bi-power"></i>
                                                            </button>
                                                        </form>
                                                        <form asp-controller="Home" asp-action="DeleteSensor" asp-route-id="@sensor.SensorId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this sensor?');">
                                                            <button type="submit" class="btn btn-sm btn-danger">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>No sensors registered in the system.</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="card dashboard-card">
                    <div class="data-quality-section">
                        <h5 class="section-heading">Data Quality</h5>
                        <p>All simulated AQI values are clamped between 0 and 500.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @functions {
        string GetAqiClass(int aqi)
        {
            if (aqi <= 50) return "aqi-good";
            if (aqi <= 100) return "aqi-moderate";
            if (aqi <= 150) return "aqi-unhealthy-sensitive";
            if (aqi <= 200) return "aqi-unhealthy";
            if (aqi <= 300) return "aqi-very-unhealthy";
            return "aqi-hazardous";
        }
    }
</body>
</html>