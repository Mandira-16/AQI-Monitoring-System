@{
    ViewData["Title"] = "Monitoring Admin Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Monitoring Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginStyleSheet.css" />
    <style>
        .dashboard-container {
            margin-top: 50px;
        }
        .dashboard-card {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .btn-action {
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container dashboard-container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card dashboard-card">
                    <div class="card-header">
                        <h4 class="text-center">Monitoring Admin Dashboard</h4>
                    </div>
                    <div class="card-body">
                        <p>Welcome, @User.Identity.Name! You are logged in as an Admin.</p>
                        <div class="d-grid btn-action">
                            <a asp-controller="Home" asp-action="Register" class="btn btn-primary">Register New User</a>
                        </div>
                        <div class="d-grid btn-action">
                            <form asp-controller="Home" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-secondary">Logout</button>
                            </form>
                        </div>
                        <!-- Placeholder for future features -->
                        <div class="mt-4">
                            <h5>System Overview</h5>
                            <p>More features coming soon (e.g., sensor management, system status, alerts)...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>